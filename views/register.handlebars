<div class="col-lg-6 col-sm-8 registerBody mt-5">
    <div class="d-flex flex-column align-items-center mt-5">
        <h1><img src="/image/register.png" width="50" height="50" class="mr-2">註冊帳號</h1>
        <span class="text-danger">*為必填欄位</span>  
    </div>
    {{>message}}
    <form action="/users/register" method="post">
        <div class="form-group row m-3">
            <label for="name" class="col-sm-2 col-form-label">姓名<span class="text-danger">*</span>：</label>
            <div class="col-sm-10">
            <input type="text" class="form-control" id="name" name="name" placeholder="王小明" required>
            </div>
        </div>    
        <div class="form-group row m-3">
            <label for="email" class="col-sm-2 col-form-label">電子郵件<span class="text-danger">*</span>：</label>
            <div class="col-sm-10">
            <input type="email" class="form-control" id="email" name="email" placeholder="123@example.com" required>
            </div>
        </div>
        <div class="form-group row m-3">
            <label for="password" class="col-sm-2 col-form-label">密碼<span class="text-danger">*</span>：</label>
            <div class="col-sm-10">
            <input type="password" class="form-control" id="password" name="password" minlength="6" placeholder="請輸入六位以上密碼" required>
            </div>
        </div>    
        <div class="form-group row m-3">
            <label for="confirmPassword" class="col-sm-2 col-form-label">確認密碼<span class="text-danger">*</span>：</label>
            <div class="col-sm-10">
            <input type="password" class="form-control" id="confirmPassword" name="confirmPassword" minlength="6" placeholder="再輸入一次密碼" required>
            </div>
        </div>       
        <div class="m-4">
            <span>已經有帳號嗎?</span>
            <a href="/users/login" class="mr-1">登入帳號</a>  
        </div>
        <div class="d-flex justify-content-center">
            <button class="btn btn-outline-success mb-5 mr-3" type="submit">註冊帳號</button>
            <a class="btn btn-outline-primary mb-5 mr-3" type="button" href="/auth/facebook"><i class="fab fa-facebook-square mr-2"></i>Facebook登入</a>
            <a class="btn btn-outline-primary mb-5 mr-3" type="button" href="/auth/google"><i class="fab fa-google mr-2"></i>Google登入</a>
            <a class="btn btn-outline-primary mb-5" type="button" href="/auth/twitter"><i class="fab fa-twitter mr-2"></i>Twitter登入</a>
        </div>
    </form>
</div>

