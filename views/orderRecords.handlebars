<div class="col-sm-8 commodityBody">
    <div class="commodityTitle container d-flex flex-column align-items-center mt-5 mb-4 p-3">
        <h1 class="display-4 mr-3">購買紀錄</h1>
        <div class="btn-group m-2" role="group" aria-label="Basic example">
        <a type="button" class="btn btn-primary" href="/users/account">個人資料</a>
        <a type="button" class="btn btn-danger" href="/users/likeCommodities">最愛商品清單</a>
        </div>    
    </div> 
    {{#if orderRecordError}}
        <div class="alert alert-danger alert-dismissible fade show m-4" role="alert">
        {{ orderRecordError }}
        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
            <span aria-hidden="true">&times;</span>
        </button>
        </div>
    {{/if}}
    <ul class="list-unstyled mb-5">
        {{#each order}} 
        <li class="media commodityLi m-3 d-flex flex-column">
            <h4 class="m-3"><i class="fas fa-calendar-day mr-3"></i>購買日期：{{this.updatedAt}}</h4>
            <p class="ml-3"><i class="fas fa-money-bill-wave mr-3"></i>消費金額：{{this.totalAmount}}</p>
            <p class="ml-3"><i class="fas fa-map-marked-alt mr-3"></i>寄送地址：{{this.address}}</p>
            <div>
                <h5 class="m-3"><i class="fas fa-shopping-cart mr-3"></i>購買商品</h5>
                <div class="d-flex justify-content-around">
                {{#each this.OrderItems}}
                    <div class="ml-5 mt-3 mb-2">
                        <p>{{this.Commodity.dataValues.name}}</p>
                        <a href="/commodity/{{this.Commodity.dataValues.id}}" target="_blank">
                        <img src="{{this.Commodity.dataValues.image}}" class="card-img-top mt-3 mb-3" width="120" height="120">
                        </a>
                        <p>購買價格：{{this.price}}</p>
                        <p>購買數量：{{this.quantity}}</p>
                    </div>
                {{/each}}
                </div>
            </div>
            
        </li>
        {{/each}}
    </ul>
</div>