<div class="col-sm-2">
    <div class="list-group categoryLi m-4">
    <a href="/" class="list-group-item list-group-item-action {{{active 'all' categoryId}}}" aria-current="true">
        全部商品
    </a>
    {{#each category}}
    <a href="/commodity/category/{{this.id}}" class="list-group-item list-group-item-action {{{active this.id ../categoryId}}}">{{this.name}}</a>
    {{/each}}
    </div>
</div>
<div class="col-sm-10 mt-3 mb-5">
    {{>message}}
    {{#if searchError}}
        <div class="alert alert-danger alert-dismissible fade show m-4" role="alert">
        {{ searchError }}
        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
            <span aria-hidden="true">&times;</span>
        </button>
        </div>
    {{/if}}
    <div class="row">
    {{#each commodity}}  
        <div class="card col-sm-6 col-lg-4 col-xl-3 m-2">
            <img src="{{this.image}}" class="card-img-top mt-3" width="200" height="250">
            <div class="card-body">
                <h5>{{this.name}}</h5>
                <span class="badge badge-pill badge-dark"><small>{{this.Category.name}}</small></span>
                <p class="ml-2 mt-3">價格：{{this.price}}</p>
                <p class="mt-3">
                <span class="ml-2">銷售量：{{this.saleAmount}}</span>
                <span class="ml-2">瀏覽人數：{{this.viewCount}}</span>
                </p>
                <div class="btn-group" role="group" aria-label="Basic example">
                    <a type="button" class="btn btn-primary" href="/commodity/{{this.id}}">詳細資訊</a>
                    {{#if this.likedUser}}
                        <form action="/commodity/like/{{this.id}}?_method=DELETE" method="post">
                        <button type="submit" class="btn btn-secondary"><i class="fas fa-heart-broken mr-1"></i></button>
                        </form>                   
                    {{else}}
                        <form action="/commodity/like/{{this.id}}" method="post">
                            <button type="submit" class="btn btn-danger"><i class="fas fa-heart"></i></button>
                        </form>
                    {{/if}}
                    <form action="/cart/{{this.id}}" method="post">
                        <button type="submit" class="btn btn-success"><i class="fas fa-shopping-cart"></i></button>
                    </form>
                </div>
            </div>
        </div>  
    {{/each}}         
    </div>
    
</div>