<div class="col-sm-8 accountPage mt-5">
    <div class="card mb-3 mt-3">
    <div class="row no-gutters">
        <div class="col-md-4">
        <img src="{{user.image}}" width="250" height="250" class="ml-2">
        </div>
        <div class="col-md-8">
        <div class="card-body">
            <h3 class="card-title"><i class="fas fa-file-signature mr-2"></i>{{user.name}}帳戶資料</h3>
            <p>電話：{{user.phone}}</p>
            <p>信箱：{{user.email}}</p>
            <p>地址：{{user.address}}</p>
            <a type="button" class="btn btn-primary" href="/users/account/{{user.id}}/edit">修改個人資料</a>
        </div>
        </div>
    </div>
    </div>
</div>
<ul class="col-sm-8 list-unstyled mt-3 mb-5 accountUl">    
    <li class="media commodityLi m-3">
        <div class="media-body">
            <div class="d-flex justify-content-start align-items-center">
               <h4 class="ml-3 mb-3 mt-3">我的最愛商品</h4>
                <a type="button" class="btn btn-success ml-3" href="/users/likeCommodities">
                    詳細資訊 <span class="badge badge-light ml-1">{{user.LikedCommodities.length}}</span>
                </a> 
            </div>
            <div class="m-3">
                {{#each user.LikedCommodities}}
                <a href="/commodity/{{this.id}}"><img src="{{this.image}}" class="m-1" width="80" height="80"></a>
                {{/each}}
            </div>
        </div>
    </li>
    <li class="media commodityLi m-3 mt-4">
        <div class="media-body">
            <div class="d-flex justify-content-start align-items-center">
                <h4 class="ml-3 mb-3 mt-3">購買紀錄</h4>
                <a type="button" class="btn btn-success ml-3" href="/order/records">
                    詳細資訊 <span class="badge badge-light ml-1">{{orderData.length}}</span>
                </a>   
            </div>
            <div class="m-3">
            {{#each orderData}}
                <p class="ml-3"><i class="fas fa-calendar-day mr-3"></i>購買日期：{{this.updatedAt}}
                <i class="fas fa-money-bill-wave ml-3 mr-3"></i>消費金額：{{this.totalAmount}}</p>
            {{/each}}
            </div>
        </div>
    </li>
</ul>